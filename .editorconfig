# top-level EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indent (fallback)
indent_style = space
indent_size = 2

# C/C++ (headers & impls, including .inl/.tpp/.ipp)
[*.{c,cc,cpp,cxx,h,hpp,hxx,inl,tpp,ipp}]
indent_style = space
indent_size = 4
tab_width = 4

# CMake
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML / JSON / TOML
[*.{yml,yaml,json,toml}]
indent_style = space
indent_size = 2

# Markdown (don’t strip trailing spaces; they’re meaningful)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell / Bash
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
